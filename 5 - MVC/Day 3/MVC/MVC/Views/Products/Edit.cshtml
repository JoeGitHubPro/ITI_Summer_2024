@model EditProductViewModel


<h1>Edit</h1>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form action="/Products/EditSumbit" method="post">
            <div class="text-danger">
               
            </div>
            <input type="hidden" id="Id" name="Id" value="@Model.Product.Id" />
            <div class="form-group">
                <label for="Name" class="control-label">Name</label>
                <input id="Name" name="Name" class="form-control" value="@Model.Product.Name" />
                <span class="text-danger">
                   
                </span>
            </div>
            <div class="form-group">
                <label for="Price" class="control-label">Price</label>
                <input id="Price" name="Price" class="form-control" value="@Model.Product.Price" />
                <span class="text-danger">
                   
                </span>
            </div>
            <div class="form-group">
                <label for="CategoryId" class="control-label">Category</label>
                <select id="CategoryId" name="CategoryId" class="form-control">
                   
                    @foreach (var category in Model.Categories)
                    {
                        <option value="@category.Id">@category.Name</option> 
                    }
                </select>
                <span class="text-danger">
                    
                </span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a href="/Products/Index">Back to List</a> 
</div>
