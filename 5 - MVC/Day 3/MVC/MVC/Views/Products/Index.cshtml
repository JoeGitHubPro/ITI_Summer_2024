@model List<Product>


<h1>Index</h1>

<p>
    <a class="btn btn-primary" href="/Products/Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Price
            </th>
            <th>
                Category
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @item.Name
            </td>
            <td>
                @item.Price
            </td>
            <td>
                @item.Category.Name
            </td>
            <td>
                    <a href="/Products/Edit/@item.Id" class="btn btn-secondary">Edit</a> |
                    <a href="/Products/Details/@item.Id" class="btn btn-secondary">Details</a>

            </td>
        </tr>
}
    </tbody>
</table>
