@model List<Product>


<h1>Index</h1>


<table class="table">
    <thead>
        <tr>
             <th>
               Id
            </th>
            <th>
              Name
            </th>
            <th>
                Price
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
             <td>
                    <a href="/Products/Details/@item.Id">  @item.Id</a>
            </td>
            <td>
                    @item.Name
            </td>
            <td>
                    @item.Price
            </td>
        </tr>
}
    </tbody>
</table>
